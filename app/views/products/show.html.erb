<p><%= link_to "Back", products_path %></p>

<section class="product">
  <section class="product-info">
    <% cache @product do %>
      <h1><%= @product.name %></h1>
      <%= @product.description %>
    <% end %>

    <div style="padding-top: 5px">
      <%= render "inventory", product: @product %>
    </div>

    <% if @product.contract.attached? %>
      <div style="padding-top: 5px">
        Current contract: <%= @product.contract.filename %> 
        (<%= link_to "download", rails_blob_path(@product.contract, disposition: "attachment") %>)
      </div>
    <% end %>

    <div style="padding-top: 5px">
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_product_path(@product) %>
        <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
      <% end %>
    </div>
  </section>
</section>
