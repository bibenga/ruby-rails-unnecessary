<%= form_with model: product do |form| %>
  <% if form.object.errors.any? %>
    <p class="error"><%= form.object.errors.full_messages.first %></p>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :inventory_count, style: "display: block" %>
    <%= form.number_field :inventory_count %>
  </div>

  <div>
    <%= form.hidden_field :contract, value: @product.contract.signed_id if @product.contract.attached? %>
    <%= form.label :contract, style: "display: block" %>
    <%= form.file_field :contract, direct_upload: true %>
    <% if @product.contract.attached? %>
      <div>
        Current contract: <%= @product.contract.filename %>
        (<%= link_to "download", rails_blob_path(@product.contract, disposition: "attachment") %>)
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
